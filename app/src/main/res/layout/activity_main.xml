<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green"
    tools:context=".landing_page">

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_bottom">

        <TextView
            android:id="@+id/t1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:fontFamily="@font/pacifico_regular"
            android:gravity="center"
            android:letterSpacing="0.02"
            android:text="Road Run !"
            android:textColor="@color/light_green"
            android:textSize="30sp" />

        <ImageView
            android:layout_width="70sp"
            android:layout_height="70sp"
            android:layout_below="@+id/t1"
            android:layout_centerInParent="true"
            android:layout_marginBottom="30sp"
            android:src="@drawable/car_search_logo" />


    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/stroke"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/r1">

        <ImageButton
            android:id="@+id/img1"
            android:layout_width="100sp"
            android:layout_height="120sp"
            android:layout_marginTop="20sp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/traffice_police"/>

        <TextView
            android:id="@+id/t2"
            android:layout_below="@+id/img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome\n\nwe are here to help you find the\nvechile you are searching for ! "
            android:gravity="center"
            android:textStyle="normal"
            android:layout_marginTop="2mm"
            android:lineHeight="26sp"
            android:textSize="20sp"
            android:fontFamily="@font/pacifico_regular"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/t3"
            android:layout_below="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Who are you ?"
            android:layout_marginTop="2mm"
            android:textStyle="normal"
            android:textSize="30sp"
            android:fontFamily="@font/pacifico_regular"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            />

        <Button
            android:id="@+id/admin_but"
            android:fontFamily="@font/pacifico_regular"
            android:layout_marginTop="30sp"
            android:layout_below="@+id/t3"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="20sp"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:textSize="20sp"
            android:backgroundTint="@color/background_green"
            android:textColor="@color/light_green"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Admin" />

        <Button
            android:id="@+id/user_but"
            android:layout_below="@id/admin_but"
            android:textSize="20sp"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="20sp"
            android:textColor="@color/light_green"
            android:fontFamily="@font/pacifico_regular"
            android:backgroundTint="@color/background_green"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User" />

    </RelativeLayout>


</RelativeLayout>